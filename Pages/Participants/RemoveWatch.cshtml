@page
@model RemoveWatchModel

<h2>Remove from watchlist</h2>
<p>Are you sure you want to remove @Model.Participant?.FullName from your watchlist?</p>

<form method="POST">
    <input type="hidden" value="@Model.Participant?.Id" />
    <a asp-page="/participants/watchlist" class="btn">Cancel</a>
    <button type="submit" class="btn btn-danger">Remove</button>
</form>