@page
@model LOVIT.Tracker.Pages.Admin.Monitors.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Monitor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Monitor.Id" />
            <div class="form-group">
                <label asp-for="Monitor.CheckpointId" class="control-label"></label>
                <select asp-for="Monitor.CheckpointId" class="form-control" asp-items="ViewBag.CheckpointId"></select>
                <span asp-validation-for="Monitor.CheckpointId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monitor.Name" class="control-label"></label>
                <input asp-for="Monitor.Name" class="form-control" />
                <span asp-validation-for="Monitor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monitor.PhoneNumber" class="control-label"></label>
                <input asp-for="Monitor.PhoneNumber" class="form-control" />
                <span asp-validation-for="Monitor.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Monitor.Active" /> @Html.DisplayNameFor(model => model.Monitor.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
