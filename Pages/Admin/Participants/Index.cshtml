@page
@model LOVIT.Tracker.Pages.Admin.Participants.IndexModel

@{
    ViewData["Title"] = "Index";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Participant[0].Bib)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant[0].Region)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant[0].Race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant[0].Linked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant[0].Rank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant[0].UltraSignupEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Participant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bib)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Race.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Linked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UltraSignupEmail)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>
<script>
    $(document).ready( function () {
        $('.table').DataTable();
    });
</script>
}