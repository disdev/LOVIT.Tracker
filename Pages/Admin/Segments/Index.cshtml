@page
@model LOVIT.Tracker.Pages.Admin.Segments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Segment[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Segment[0].Race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Segment[0].Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Segment[0].GeoJson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Segment[0].FromCheckpoint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Segment[0].ToCheckpoint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Segment[0].Distance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Segment[0].TotalDistance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Segment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Race.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeoJson)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromCheckpoint.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToCheckpoint.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalDistance)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
