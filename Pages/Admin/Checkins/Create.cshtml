@page
@model LOVIT.Tracker.Pages.Admin.Checkins.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Checkin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Checkin.When" class="control-label"></label>
                <input asp-for="Checkin.When" class="form-control" />
                <span asp-validation-for="Checkin.When" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Checkin.ParticipantId" class="control-label"></label>
                <select asp-for="Checkin.ParticipantId" class ="form-control" asp-items="ViewBag.ParticipantId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Checkin.SegmentId" class="control-label"></label>
                <select asp-for="Checkin.SegmentId" class ="form-control" asp-items="ViewBag.SegmentId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Checkin.Confirmed" /> @Html.DisplayNameFor(model => model.Checkin.Confirmed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Checkin.Note" class="control-label"></label>
                <input asp-for="Checkin.Note" class="form-control" />
                <span asp-validation-for="Checkin.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Checkin.MessageId" class="control-label"></label>
                <select asp-for="Checkin.MessageId" class ="form-control" asp-items="ViewBag.MessageId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Checkin.Elapsed" class="control-label"></label>
                <input asp-for="Checkin.Elapsed" class="form-control" />
                <span asp-validation-for="Checkin.Elapsed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
