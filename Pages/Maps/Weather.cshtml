@page
@model LOVIT.Tracker.Pages.Maps.WeatherModel
@{
    ViewData["Title"] = "Weather Map";
}

<div class="row">
    <div class="col">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="windy-map-tab" data-bs-toggle="tab" data-bs-target="#windy-map" type="button" role="tab" aria-controls="windy-map" aria-selected="true">Windy</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="rainviewer-map-tab" data-bs-toggle="tab" data-bs-target="#rainviewer-map" type="button" role="tab" aria-controls="rainviewer-map" aria-selected="true">Rainviewer</button>
            </li>
        </ul>
    </div>
</div>

<div class="tab-content mt-2">
    <div class="tab-pane fade show active" id="windy-map" role="tabpanel" aria-labelledby="windy-map-tab" tabindex="0">
        <div class="row">
            <div class="col">
                <iframe id="windy-iframe" width="100%" height="800px" src="https://embed.windy.com/embed2.html?lat=34.525&lon=-93.369&detailLat=32.822&detailLon=-80.057&zoom=9&level=surface&overlay=rain&product=ecmwf&menu=&message=true&marker=&calendar=now&pressure=&type=map&location=coordinates&detail=&metricWind=default&metricTemp=default&radarRange=-1" frameborder="0"></iframe>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="rainviewer-map" role="tabpanel" aria-labelledby="rainviewer-map-tab" tabindex="0">
        <div class="row">
            <div class="col">
                <iframe width="100%" height="800px" src="https://www.rainviewer.com/map.html?loc=34.4658,-93.3508,8&oFa=0&oC=1&oU=0&oCS=1&oF=0&oAP=0&c=5&o=90&lm=1&layer=radar&sm=1&sn=1&hu=1" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>
